{% extends 'base.html.twig' %}

{% block body_id "index" %}
{% block main %}
    <!-- Page Content -->
    <div class="container">

        <!-- Jumbotron Header -->
        <header class="jumbotron my-4">

            <h1 class="display-2">A Warm Welcome!</h1>
            <p class="lead">Add your favorite cars. Or browse cars, added by other users!  </p>

        </header>



        <!-- Page Features -->
        <div class="row text-center">
            {% for car in cars %}
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="{{ asset('uploads/cars/images/' ~ car.image ) }}" alt="">
                    <div class="card-body">
                        <h4 class="card-title">{{ car.brand }} {{ car.model }}</h4>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('car_view', {'id':car.id}) }}" class="btn btn-primary">Find Out More!</a>
                    </div>
                </div>
            </div>



            {% endfor %}
        </div>

        <!-- /.row -->

    </div>
    <!-- /.container -->
{% endblock %}
